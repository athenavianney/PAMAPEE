<div class="container">
	<br>
    <h1> Nuevo Alumno </h1>
    <hr>
</div>

<%= form_with model: [@group, @student], local: true do |form| %>
  
	<div class="container col-8">
	  	<div class="form">
				<%= form.label :name, 'Nombre alumno: ', class: " m-2 p-2" %><br>
				<%= form.text_field :name, required: true , class: "form-control m-2 p-2" %>
	  	</div>
	  	
	  	<div class="form">
				<%= form.label :last_name, 'Apellido/s alumno: ', class: "m-2 p-2" %><br>
				<%= form.text_field :last_name, required: true , class: "form-control m-2 p-2" %>
	  	</div>

	    <%= form.submit 'Registrar Alumno', class: "btn btn-success m-2 p-2" %>
	    <%= link_to 'Regresar', group_path(@group), class: "btn btn-primary" %>
	</div>
<% end %>

