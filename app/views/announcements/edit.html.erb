<div class="container">
    <div>
    	<br>
        <h1>Editar convocatoria del curso:
            <%= @announcement.name_program %>
        </h1>
        <hr>
    </div>
</div>

<%= form_with(model: @announcement, local: true) do |form| %>
	<% if @announcement.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@announcement.errors.count, "error") %> prohibited
				this announcement from being saved:
			</h2>
			<ul>
				<% @announcement.errors.full_messages.each do |msg| %>
				  <li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
  
	<div class="container col-8">
		<div class="row align-items-center p-2">
	        <div class="col-3">
	            <strong>Instructor:</strong>
	        </div>
	        <div class="col-5">
				<%= @announcement.instructor %>
			</div>
	    </div>


	    <div class="row align-items-center p-2">
	        <div class="col-3">
	        	<strong>Inicio inscripción:</strong>
	    	</div>
	        <div class="col-5">
	            <%= @announcement.start_registration %>
			</div>
	    </div>

	    <div class="row align-items-center p-2">
	        <div class="col-3">
				<strong>Fin inscripción:</strong>
			</div>
	        <div class="col-5">	
				<%= @announcement.end_registration %>
	        </div>
	    </div>

	    <div class="row align-items-center p-2">
	        <div class="col-3">
	            <strong>Duracion:</strong>
			</div>
	        <div class="col-5">
	        	<%= @announcement.length %>
			</div>
	    </div>

	    <div class="form-inline">
				<%= form.label :start_date, 'Inicio de curso: ', class: "p-2" %><br>
				<%= form.date_field :start_date, required: true , class: "form-control m-1 p-2" %>
	  	</div>

		
		<div class="form-inline">
				<%= form.label :end_date, 'Fin de curso: ', class: "p-2" %><br>
				<%= form.date_field :end_date, required: true , class: "form-control p-2" %>
	  	</div>
	  	
		<div class="form">
				<%= form.label :schedule, 'Horario: ', class: " p-2" %><br>
				<%= form.text_area :schedule, required: true , class: "form-control p-2" %>
	  	</div>

		<div class="form">
				<%= form.label :faculty, 'División: ', class: "p-2" %><br>
				<%= form.text_field :faculty, required: true , class: "form-control p-2" %>
	  	</div>
	  	
	  	<div class="form">
				<%= form.label :department, 'Departamento: ', class: "p-2" %><br>
				<%= form.text_field :department, required: true , class: "form-control p-2" %>
	  	</div>

	  	<div class="form">
				<%= form.label :classroom, 'Aula: ', class: "p-2" %><br>
				<%= form.text_field :classroom, required: true , class: "form-control p-2" %>
	  	</div>	  	

	  	<div class="form">
				<%= form.label :location, 'Especificaciones lugar: ', class: "p-2" %><br>
				<%= form.text_area :location, required: true , class: "form-control p-2" %>
	  	</div>
	  	
	  	<div class="form">
				<%= form.label :summary, 'Objetivo general: ', class: "p-2" %><br>
				<%= form.text_area :summary, required: true , class: "form-control p-2" %>
	  	</div>

	  	<div class="form">
				<%= form.label :cv_resume, 'Resumen cv instructor: ', class: "p-2" %><br>
				<%= form.text_area :cv_resume, required: true , class: "form-control p-2"%>
	  	</div>
	  	<br>
		<div class="btn-group">
		    <%= form.submit 'Guardar', class: "btn btn-success p-2" %>
		    <%= link_to 'Regresar', announcements_path, class: "btn btn-primary" %>
		</div>
	</div>
<% end %>
